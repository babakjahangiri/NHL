{
    "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
},
        "liveServer.settings.fullReload": true,
        "liveServer.settings.port" : 8800,
        "liveServer.settings.root" : "/",
        "liveSassCompile.settings.generateMap" : false,
 
        "liveSassCompile.settings.includeItems": [
        "/scss/main.scss",
        "/scss/style.scss"
        ],

        "liveSassCompile.settings.formats":[
            {
                "format": "expanded",
                "extensionName": ".css",
                "savePath": "/assets/css"
            },
            {
                 "format": "compressed",
                "extensionName": ".min.css",
                "savePath": "/assets/cssmin"
            }
        ],
    "liveSassCompile.settings.autoprefix": [
      "> 1%",
      "last 3 version",
      "Chrome >= 35",
      "Firefox >= 38",
      "Edge >= 10",
      "Explorer >= 10",
      "ie >= 10",
      "iOS >= 8",
      "Safari >= 8",
      "Android 2.3",
      "Android >= 4",
      "Opera >= 12"
],
"git.ignoreLimitWarning": true
}